{
    "AWSEBDockerrunVersion": 2,
    "containerDefinitions": [
    {
    "name" : "messengerproxy",
    "image" : "addepallimadhu/messengerproxy:latest",
    "hostname" : "messengerproxy",
    "essential" : true,
    "portMappings": [
        {
            "hostPort" : 80,
	    "containerPort" : 3003
        }
    ],
    "links" : ["messengerapp","messengerweb"],
    "memory" : 100
    },
    {
     "name" : "messengerweb",
     "image" : "addepallimadhu/messengerweb:latest",
     "hostname" : "messengerweb",
     "essential" : true
     "memory" : 300,
     "links" : ["messengerapp"]
    },
    
    {
     "name" : "messengerapp",
     "image" : "addepallimadhu/messengerapp:latest",
     "hostname" : "messengerapp",
     "essential" : true,
     "memory" : 300,
     "links" : ["messengerappdb"],
     "environment": [
         {
             "name": "spring_profiles_active",
             "value": "docker"
         }
        ]
    },
    
    {
     "name" : "messengerappdb",
     "image" : "addepallimadhu/messengerappdb:latest",
     "hostname" : "messengerappdb",
     "essential" : true,
     "memory" : 300,
     "environment": [
         {
             "name": "POSTGRES_DB",
             "value": "postgres"
         },
         {
            "name": "POSTGRES_USER",
            "value": "postgres"
        },
        {
            "name": "POSTGRES_PASSWORD",
            "value": "****"
        }
        ]
    }
    ]
}


    
